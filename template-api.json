{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "prefix": {
      "type": "string",
      "metadata": {
        "description": "Name of the subnet to add"
      }
    },
    "existingVnetName": {
      "type": "string",
      "metadata": {
        "description": "vName of the existing virtual network."
      }
    },
    "existingSubnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing subnet."
      }
    },
    "existingLoadBalancerName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing load balancer to connect the scale set to."
      }
    },
    "existingLoadBalancerBackendPoolName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing backend pool in load balancer."
      }
    },
    "adminUsername": {
      "type": "string",
      "metadata": {
        "description": "Admin username on all VMs."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password on all VMs."
      }
    }
  },
  "variables": {
    "sqlServerDeploymentName": "[concat('template', parameters('prefix'), '-sql')]"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "[variables('sqlServerDeploymentName')]",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/kryvoplias/arm-template/master/template-sql-server.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "prefix": {
            "value": "[parameters('prefix')]"
          },
          "databaseName": {
            "value": "sample-db"
          },
          "administratorLogin": {
            "value": "[parameters('adminUsername')]"
          },
          "administratorLoginPassword": {
            "value": "[parameters('adminPassword')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "[concat('template', parameters('prefix'), '-vmss')]",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', variables('sqlServerDeploymentName'))]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/kryvoplias/arm-template/master/template-vmss.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "existingVnetName": {
            "value": "[parameters('existingVnetName')]"
          },
          "existingSubnetName": {
            "value": "[parameters('existingSubnetName')]"
          },
          "existingLoadBalancerName": {
            "value": "[parameters('existingLoadBalancerName')]"
          },
          "existingLoadBalancerBackendPoolName": {
            "value": "[parameters('existingLoadBalancerBackendPoolName')]"
          },
          "vmssName": {
            "value": "[concat(parameters('prefix'), '-vmss')]"
          },
          "adminUsername": {
            "value": "[parameters('adminUsername')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          }
        }
      }
    }
  ]
}